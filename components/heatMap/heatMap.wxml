<!--components/heatMap/heatMap.wxml-->
<view class="container">
  <map style='width:100%;height:100%' id="map" longitude="110" latitude="30" scale="{{mapScale}}" bindregionchange="handleRegionchange"></map>
  
  <canvas id="heatCanvas" style="position: absolute;top: 0;width: {{p_width}}px; height: {{p_height}}px" disable-scroll="{{true}}" canvas-id="cvs"></canvas>

  <!-- 色彩数据渐变条 -->
  <canvas style="position: absolute;top: 0; width: 256px; height: 10px;" disable-scroll="{{true}}" canvas-id="color"></canvas>
</view>



